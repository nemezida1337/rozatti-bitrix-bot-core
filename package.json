{
  "name": "bitrix-bot-core",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nodemon --ext js,json --watch src --exec node src/index.js",
    "start": "node src/index.js",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "typecheck": "tsc --noEmit",
    "test": "node --test",
    "test:coverage": "node --test --experimental-test-coverage"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "dotenv": "16.6.1",
    "fastify": "^4.27.2",
    "fastify-raw-body": "4.3.0",
    "js-yaml": "^4.1.0",
    "openai": "^6.9.0",
    "pino": "^9.5.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.7",
    "@types/node": "^24.5.2",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
