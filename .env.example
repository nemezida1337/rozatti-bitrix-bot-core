# Server
PORT=8080
BASE_URL=https://your-public-https-host  # например, Cloudflare Tunnel/ngrok

# Logs
LOG_DIR=./logs
LOG_LEVEL=info

# OAuth app (Local App)
BITRIX_CLIENT_ID=
BITRIX_CLIENT_SECRET=
BITRIX_OAUTH_REDIRECT=${BASE_URL}/oauth/callback

# Dev storage (tokens by portal live here)
TOKENS_FILE=./data/portals.json

# Bot
BOT_CODE=ram_parts_bot
BOT_NAME=RAM Parts Bot
BOT_OPENLINES_WELCOME=Добро пожаловать! Напишите VIN или номер детали.
# --- Bitrix OAuth (для авто-обновления токенов) ---
BITRIX_CLIENT_ID=
BITRIX_CLIENT_SECRET=
# (cloud по-умолчанию): https://oauth.bitrix.info/oauth/token/
BITRIX_OAUTH_URL=https://oauth.bitrix.info/oauth/token/
# HF-CORTEX integration
HF_CORTEX_ENABLED=false
HF_CORTEX_URL=http://127.0.0.1:9000/api/hf-cortex/lead_sales
